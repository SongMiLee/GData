<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="data.hci.gdatawatch.Activity.AddEventActivity">

    <TableRow>
        <TextView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="0.2"
            android:text="Event Name "
            />

        <EditText
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="0.8"
            android:maxLength="@integer/text_length_calendar"
            android:id="@+id/event_name"
            />

    </TableRow>

    <TableRow>

        <TextView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="0.2"
            android:text="Event Location "
            />

        <EditText
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="0.8"
            android:maxLength="@integer/text_length_calendar"
            android:id="@+id/event_location"
            />

    </TableRow>

    <TableRow>
        <TextView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="0.2"
            android:text="Start Date "
            />

        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/select_start_date"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_weight="0.3"
            android:hint="Date Select"
            />

        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/select_start_time"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_weight="0.3"
            android:hint="Time Select"
            />

    </TableRow>

    <TableRow>
        <TextView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="0.2"
            android:text="End Date "
            />

        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/select_end_date"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_weight="0.3"
            android:hint="Date Select"
            />

        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/select_end_time"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_weight="0.3"
            android:hint="Time Select"
            />

    </TableRow>

    <TableRow>
        <TextView
            android:text="Person"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="0.2"
            />

        <EditText
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/event_person"
            android:maxLength="@integer/text_length_calendar"
            android:layout_weight="0.8"
            />
    </TableRow>

    <TableRow>
        <Button
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="Add Event"
            android:id="@+id/insert_event"
            android:layout_weight="0.9"
            />
    </TableRow>

</TableLayout>
